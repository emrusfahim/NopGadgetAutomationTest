# ===========================================
# NOPCOMMERCE AUTOMATION TEST CONFIGURATION
# ===========================================
# Copy this file to .env and update with your actual values

# Application Base URL
BASE_URL=http://localhost:88

# Test User Credentials
TEST_EMAIL=your-test-email@example.com
TEST_PASSWORD=your-password

# Admin Credentials  
LOGIN_EMAIL=your-login-email@example.com
LOGIN_PASSWORD=your-login-password

# Password Change Testing
OLD_PASSWORD=your-old-password
NEW_PASSWORD=your-new-password

# Test Data Configuration
TEST_DATA_PATH=testData/testData_user.xlsx
WORKSHEET_USERS=Users
WORKSHEET_ADMINS=Admins  
WORKSHEET_PRODUCTS=Products
WORKSHEET_ADDRESSES=Addresses
WORKSHEET_GLOBAL=Users

# Test Execution Settings
RETRIES=1
WORKERS=1
REPORTER=html
HEADLESS=false

# Test Output Settings
TRACE=on-first-retry
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure

# Storage State
STORAGE_STATE_PATH=storageState.json

# Test Data Row Selection
ROW_INDEX=0